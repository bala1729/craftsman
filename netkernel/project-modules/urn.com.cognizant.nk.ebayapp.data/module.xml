<module version="2.0">
	<meta>
		<identity>
			<uri>urn:com:cognizant:nk:ebayapp:data</uri>
			<version>1.0.0</version>
		</identity>
		<info>
			<name>eBay Data layer on netkernel</name>
			<description>Demo of ebay data layer on netkernel.</description>
		</info>
	</meta>
	<system>
		<dynamic />
	</system>
	<rootspace public="true">
